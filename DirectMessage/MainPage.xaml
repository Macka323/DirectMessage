<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DirectMessage.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Picker x:Name="CountryPicker" FontSize="20" />
            <Entry
                x:Name="PhoneEntery"
                ClearButtonVisibility="WhileEditing"
                FontSize="35"
                Keyboard="Telephone"
                Placeholder="phone number"
                ReturnType="Go" />
            <HorizontalStackLayout
                HeightRequest="60"
                HorizontalOptions="Center"
                Spacing="30">
                <Button
                    x:Name="Telegram"
                    BackgroundColor="#29a9eb"
                    Clicked="Telegram_Clicked"
                    ImageSource="telegram.png" />
                <Button
                    x:Name="Viber"
                    BackgroundColor="#583fbb"
                    Clicked="Viber_Clicked"
                    ImageSource="viber.png" />
                <Button
                    x:Name="WhatsApp"
                    BackgroundColor="#25d366"
                    Clicked="WhatsApp_Clicked"
                    ImageSource="whatsapp.png" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
